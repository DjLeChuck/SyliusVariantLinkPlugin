<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="setono_sylius_variant_link.resolver.product_variant.default" alias="setono_sylius_variant_link.resolver.product_variant_by_code"/>

        <service id="setono_sylius_variant_link.resolver.product_variant_by_code" class="Setono\SyliusVariantLinkPlugin\Resolver\ProductVariantByCodeResolver"/>

        <service id="Setono\SyliusVariantLinkPlugin\EventListener\VariantExistsSubscriber">
            <argument type="service" id="setono_sylius_variant_link.resolver.product_variant.default"/>
            <argument type="service" id="request_stack"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="Setono\SyliusVariantLinkPlugin\EventListener\AddCanonicalSubscriber">
            <argument type="service" id="request_stack"/>
            <argument type="service" id="router"/>
            <tag name="kernel.event_subscriber"/>
        </service>
    </services>
</container>
